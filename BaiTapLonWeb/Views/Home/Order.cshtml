
@{
    ViewBag.Title = "Order";
}
@using(Html.BeginForm()){
    <div style="width:100%; height:400px;">
        @Html.Raw(ViewBag.View)
        <div style="float:right; width:50%; height:200px; margin-right:2px;">
        <table style="color:white;">
            <tr>
                <td>Address to Delivery: (Be Specific)</td>
                <td>@Html.TextArea("txtaddress")</td>
            </tr>
        </table>
    <button type="submit" style="margin-top:20px; display:block;">Send Order</button>
            </div>
    </div>
}